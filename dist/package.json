{
  "name": "debug-tool-1",
  "version": "1.0.0",
  "description": "",
  "main": "entry-bundle.js",
  "scripts": {
    "postinstall": "(cd packages/ws-ts-language-server && npm install);",
    "start": "webpack-dev-server --host 0.0.0.0 --port 3001 --config=./webpack.dev.config.js",
    "lint": "eslint",
    "prebuild": "node scripts/prepareBuild",
    "build": "cross-env webpack --config webpack.build.config.js",
    "dist": "npm run build && electron-builder --projectDir=./dist"
  },
  "build": {
    "productName": "debug-tool",
    "appId": "debug.tool.haaslabs",
    "asarUnpack": [
      "./node_modules/npm"
    ],
    "extraResources": [
      "./packages/ws-ts-language-server"
    ],
    "compression": "normal",
    "mac": {
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "./entitlements.mac.plist",
      "entitlementsInherit": "./entitlements.mac.plist",
      "extendInfo": {
        "NSCameraUsageDescription": "This app requires camera access to capture video.",
        "NSMicrophoneUsageDescription": "This app requires microphone access to capture audio."
      },
      "category": "public.app-category.developer-tools",
      "target": "default",
      "darkModeSupport": true,
      "icon": "../assets/mac/icon.png"
    },
    "dmg": {
      "sign": false
    },
    "linux": {
      "target": [
        {
          "target": "deb",
          "arch": [
            "x64",
            "armv7l",
            "arm64"
          ]
        },
        {
          "target": "tar.gz",
          "arch": [
            "x64",
            "armv7l",
            "arm64"
          ]
        },
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "../assets/linux"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "../assets/win/icon.png"
    },
    "directories": {
      "output": "../builds",
      "buildResources": "../assets"
    },
    "extends": null
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lukehaas/debug-tool-1.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/lukehaas/debug-tool-1/issues"
  },
  "homepage": "https://github.com/lukehaas/debug-tool-1#readme",
  "devDependencies": {
    "@babel/core": "7.14.6",
    "@babel/eslint-parser": "7.14.7",
    "@babel/preset-env": "7.14.7",
    "@babel/preset-react": "7.14.5",
    "babel-loader": "8.2.2",
    "cross-env": "7.0.3",
    "css-loader": "4.2.1",
    "electron": "12.0.2",
    "electron-builder": "22.10.5",
    "eslint": "7.30.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-babel": "5.3.1",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-react": "7.24.0",
    "file-loader": "6.0.0",
    "fs-extra": "10.0.0",
    "html-webpack-plugin": "4.3.0",
    "mini-css-extract-plugin": "0.10.0",
    "node-sass": "5.0.0",
    "prettier": "2.3.2",
    "sass": "1.32.12",
    "sass-loader": "10.1.1",
    "terser-webpack-plugin": "4.2.3",
    "webpack": "4.44.1",
    "webpack-cli": "3.3.12",
    "webpack-dev-server": "3.11.0"
  },
  "dependencies": {
    "codemirror": "5.62.0",
    "electron-util": "0.17.0",
    "kill-port": "1.6.1",
    "lodash": "4.17.21",
    "node-fetch": "2.6.1",
    "npm": "7.19.1",
    "prop-types": "15.7.2",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "tree-kill": "1.2.2",
    "ws": "7.5.3"
  }
}
